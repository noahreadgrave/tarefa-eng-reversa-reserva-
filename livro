class livro {

    titulo: string;
    autor: string;
    anoPublicacao: number;
    numeroPaginas: number;
    qtEstoque: number;
    constructor(titulo: string, autor: string, anoPublicacao: number, numeroPaginas: number, qtEstoque: number,
    ) {
        this.titulo = titulo;
        this.autor = autor;
        this.anoPublicacao = anoPublicacao;
        this.numeroPaginas = numeroPaginas;
        this.qtEstoque = qtEstoque;
    }
    //a função imprimir detalhes imprime as informaçoes descritas acima//
    imprimirDetalhes() {
        console.log("---------------------");
        console.log(`Título: ${this.titulo}`);
        console.log(`Autor: ${this.autor}`);
        console.log(`Ano de Publicação: ${this.anoPublicacao}`);
        console.log(`Número de Páginas: ${this.numeroPaginas}`);
        console.log(`Quantidade em Estoque: ${this.qtEstoque}`);
        console.log("---------------------");
    }

}
export default livro;
